# Claude Code Development Sudoers Configuration
# Install with: sudo cp claude-dev-sudoers /etc/sudoers.d/claude-dev && sudo chmod 440 /etc/sudoers.d/claude-dev
#
# This allows the fede user to run specific development commands without password
# after authenticating once in the session.

# PostgreSQL operations
fede ALL=(postgres) NOPASSWD: /usr/bin/psql
fede ALL=(postgres) NOPASSWD: /usr/bin/pg_dump
fede ALL=(postgres) NOPASSWD: /usr/bin/pg_restore
fede ALL=(postgres) NOPASSWD: /usr/bin/createdb
fede ALL=(postgres) NOPASSWD: /usr/bin/dropdb

# System service management
fede ALL=(root) NOPASSWD: /usr/bin/systemctl status *

# Docker container management
fede ALL=(root) NOPASSWD: /usr/bin/docker restart sai-dashboard
fede ALL=(root) NOPASSWD: /usr/bin/docker stop sai-dashboard
fede ALL=(root) NOPASSWD: /usr/bin/docker start sai-dashboard
fede ALL=(root) NOPASSWD: /usr/bin/docker logs *
